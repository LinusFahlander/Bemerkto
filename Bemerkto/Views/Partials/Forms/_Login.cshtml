@model LoginViewModel


<section class="login-form">
    <div class="container">
        <div class="title">Please login to your Account</div>

        <form asp-action="Index" asp-controller="login" method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="email form-group">
                <div class="register-account">
                    <label asp-for="Email"></label>
                    <a class="link" asp-controller="register" asp-action="index">Don't have an Account yet?</a>
                </div>
                <input asp-for="Email" type="email" onkeyup="validateEmail(event)" />
                <small class="text-danger"><span asp-validation-for="Email"></span></small>
            </div>

            <div class="password form-group">
                <div class="forgot-password">
                    <label asp-for="Password"></label>
                    <a class="link" href="#">Forgot your Password?</a>
                </div>
                <input asp-for="Password" type="password" onkeyup="validatePassword(event)" />
                <small class="text-danger"><span asp-validation-for="Password"></span></small>
            </div>

            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    Please keep me logged in
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>

            <button class="btn-theme">Login</button>

        </form>

    </div>
</section>